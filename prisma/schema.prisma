generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  JAVA
  APTITUDE
}

model Question {
  id            String     @id @default(uuid())
  description   String
  options       String[]
  correctOption String
  likeCount     Int        @default(0)
  category      Category[]
}
